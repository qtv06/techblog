<div class="header">
  <div class="container">
    <!-- menu-header-left -->
    <div class="col-md-9">
      <div class="img-logo">
        <%= link_to (image_tag "logo.png"), root_path %>
      </div>
      <div class="menu-header">
        <ul>
          <% @categories.each do |category| %>
            <li class="item-header"><%= link_to category.category_name, category_path(category) %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <!-- search form -->
    <div class="col-md-3">
      <div class="btn-search">
        <i class="fa fa-search cursor-point"></i>
      </div>
      <div class="action-user">
        <ul class="nav navbar-nav navbar-right">
          <% if current_user %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">My Accounts <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><a href="#">Settings</a></li>
                <li><%= link_to "My Posts", user_path(current_user) %></li>
                <li><a href="#">Something else here</a></li>
                <li><a href="#">Separated link</a></li>
                <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", new_user_session_path %></li>
            <li><%= link_to "Sign up", new_user_registration_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
