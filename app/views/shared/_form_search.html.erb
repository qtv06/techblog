<div class="search-form">
  <div class="row">
    <%= form_tag(posts_path, method: :get) do %>
      <div class="col-md-10">
        <%= text_field_tag :search_field, params[:search_field], placeholder: "Search Posts", class: "form-control" %>
      </div>
      <div class="col-md-2">
        <%= submit_tag "Search", name: nil, class: "btn-submit" %>
      </div>
    <% end %>
  </div>
</div>
