<ol class="breadcrumb breadcrumb-arrow">
  <li>
    <a href="#">Home</a>
  </li>
  <li class="active"><span><%= @tag.tag_name %> Tag</span></li>
</ol>
<div class="left-content">
  <div class="list-post">
    <div class="row">
      <% @posts.each do |post| %>
        <div class="col-md-6">
          <div class="item-post">
            <div class="item-img">
              <%= default_img post.image %>
            </div>
            <div class="item-content">
              <h4 class="item-title">
                <%= link_to post.title, post_path(post) %>
              </h4>
              <p class="time"><%= convert_date post.updated_at %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render "shared/right_content_post" %>
