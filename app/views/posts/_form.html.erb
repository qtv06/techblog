<%= form_for @post, html: { multipart: true } do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :link, "Link reference: " %>
    <%= f.text_area :link, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :category_id, "Select Category of Post"%>
    <%= f.select(:category_id, categories_for_select, {include_blank: "Select category"}, {class: "form-control"}) %>
  </div>

  <div class="form-group">
    <%= f.label :tag_ids, "Add tag for Post" %>
    <% Tag.all.each do |tag| %>
      <label class="list-tag"> <%= tag.tag_name%>
          <%= f.check_box :tag_ids, {multiple: true}, tag.id, false %>
          <span class="checkmark"></span>
        </li>
      </label>
      <% end %>
  </div>

  <div class="form-group">
    <%= f.label :content %><br>
    <%= f.text_area :content, class: "ckeditor" %>
  </div>

  <div class="form-group">
    <%= f.submit "Create", class: "btn btn-primary" %>
  </div>
<% end %>
