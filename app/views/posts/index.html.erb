<div class="left-content">
  <div class="list-post">
    <div class="row">
      <% @posts.each do |post| %>
        <div class="col-md-6">
          <div class="item-post">
            <div class="item-img">
              <%= image_tag post.image.url %>
            </div>
            <div class="item-content">
              <h4 class="item-title">
                <%= link_to post.title, post_path(post) %>
              </h4>
              <p class="time"><%= convert_datetime post.updated_at %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render "shared/right_content_post" %>
